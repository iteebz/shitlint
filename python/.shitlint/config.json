{
  "brutality": "professional",
  "ignore_patterns": [
    "tests/",
    "test_*.py",
    "*_test.py",
    ".venv/",
    "node_modules/",
    "dist/",
    "build/"
  ],
  "max_file_size": 100000,
  "llm_provider": "auto",
  "custom_rules": {},
  "enabled_rules": {
    "giant_files": false,
    "import_ceremony": false,
    "duplicate_blocks": false,
    "complex_functions": false,
    "parameter_hell": false,
    "naming_violations": false,
    "magic_numbers": false,
    "over_abstraction": false,
    "commit_violations": false,
    "dependency_violations": false,
    "documentation_violations": true
  }
}